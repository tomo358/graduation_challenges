<h1>以下の内容で、出品する</h1>

<%= form_with(model: @musical_instrument, url: musical_instruments_path, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :content %>
  <%= image_tag(@musical_instrument.image) %>
  <%= form.hidden_field :image_cache %>

  <p>名前:<%= @musical_instrument.name %></p>
  <p>内容:<%= @musical_instrument.content %></p>
  <%= form.submit "投稿する" %>
<% end %>

<%= form_with(model: @musical_instrument, url: new_musical_instrument_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
